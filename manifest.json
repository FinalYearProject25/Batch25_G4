{
    "manifest_version": 2,
    "name": "Drop-down Code Editor",
    "description": "Edit and execute code",
    "version": "1.0.0",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/content.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "browser_action": {
        "default_icon": "among-us(red).png",
        "default_popup": "popup_index.html"
    },
    "permissions": [
        "activeTab"
    ]
}